<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:background="@drawable/background"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="211dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:foregroundGravity="center"
            android:src="@drawable/logo" />

        <androidx.cardview.widget.CardView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/whiteTextColor"
            app:cardCornerRadius="8dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:paddingTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:fontFamily="@font/ralewaybold"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:text="Register Your Company"
                            android:textSize="20sp" />

                    </RelativeLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPerusahaan"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/editTextPerusahaan"
                            style="@style/modifiedEditText"
                            android:hint="Nama Perusahaan"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPassword"
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin">
                        <Button
                            android:id="@+id/selectLocationButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Company Location" />
                        <LinearLayout
                            android:id="@+id/information"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <!-- TextView for Address -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Company Address"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputAddress"
                                style="@style/parent">

                                <EditText
                                    android:id="@+id/editTextAddress"
                                    style="@style/modifiedEditText"
                                    android:hint="Company address"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- TextView for Latitude -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Company Latitude"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLatitude"
                                style="@style/parent">

                                <EditText
                                    android:id="@+id/editTextLatitude"
                                    style="@style/modifiedEditText"
                                    android:hint="Company latitude"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- TextView for Longitude -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Company Longitude"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLongitude"
                                style="@style/parent">

                                <EditText
                                    android:id="@+id/editTextLongitude"
                                    style="@style/modifiedEditText"
                                    android:hint="Company longitude"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:text="Select The Package"
                        android:textSize="20dp"
                        android:fontFamily="@font/ralewaybold"
                        android:gravity="center"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!-- First Advertisement Package CardView -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Example: Text and Image for the First Advertisement Package -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EssentialHub"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Second Advertisement Package CardView -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Example: Text and Image for the Second Advertisement Package -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PremiumHub"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Add more CardViews for additional advertisement packages as needed -->

                    </LinearLayout>
                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressEditText
                        android:id="@+id/cirLoginButton"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:text="Create Now"
                        android:textAlignment="center"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                    <TextView
                        style="@style/parent"
                        android:layout_marginTop="12dp"
                        android:onClick="onLoginClick"
                        android:text="Register Your Company Here"
                        android:textAlignment="center"
                        android:textColor="@color/themeColor"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>