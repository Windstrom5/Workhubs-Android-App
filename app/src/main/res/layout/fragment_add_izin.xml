<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AddIzinFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:backgroundTint="#D3D3D3"
        app:cardCornerRadius="20dp"
        android:layout_margin="15dp"
        app:cardUseCompatPadding="true">
        <!-- Content of the form goes here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Form fields -->
            <!-- Header TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Permintaan Izin"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Nama">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edNama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:focusable="false"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TITanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/baseline_calendar_month_24"
                        android:hint="Tanggal">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:focusable="false"
                            android:enabled="false"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/asal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:elevation="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <AutoCompleteTextView
                            android:id="@+id/acasal"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:background="#E5E4E2"
                            android:hint="Pilih Kategori Izin"
                            android:textSize="15dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="15dp"
                        android:hint="Alasan">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edpekerjaan"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:layout_height="match_parent"
                            android:inputType="textMultiLine"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true"
                        android:backgroundTint="#E5E4E2"
                        android:layout_marginTop="15dp">
                        <!-- Function description -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Bukti Izin"
                                android:textSize="18sp"
                                android:layout_gravity="center"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Accepted file types: jpg, jpeg, png, pdf" />

                            <!-- File upload content -->
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <!-- Button to trigger file upload -->
                                <Button
                                    android:id="@+id/uploadfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_marginStart="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="File: " />

                                <TextView
                                    android:id="@+id/selectedFileName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="No file selected"
                                    android:maxLines="1" />

                                <Button
                                    android:id="@+id/changeFile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Change"
                                    android:visibility="gone" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <Button
                        android:id="@+id/cirsaveButton"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:text="ADD NOW"
                        android:textAlignment="center"
                        app:initialCornerAngle="27dp"
                        android:layout_margin="13dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />
                </LinearLayout>
            </ScrollView>
            <!-- Submit button -->
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>