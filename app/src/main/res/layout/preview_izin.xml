<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Izin Preview"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- TextInputLayout for Tanggal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pekerja"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/namaInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namaEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Pekerja"
                        style="@style/modifiedEditText"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>
                <!-- Title for Tanggal -->
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Dinas"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- TextInputLayout for Tanggal -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tanggalInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tanggalEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/modifiedEditText"
                        android:hint="Tanggal Dinas"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Title for Tujuan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <!-- TextInputLayout for Tujuan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kategoriInputLayout"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                    <AutoCompleteTextView
                        android:id="@+id/acizin"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:inputType="none"
                        android:hint="Pilih Kategori Izin"
                        android:textSize="15dp"
                        android:background="@color/primaryTextColor"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Title for Kegiatan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alasan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <!-- TextInputLayout for Kegiatan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/kegiatanInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/kegiatanEditText"
                        android:layout_width="match_parent"
                        style="@style/modifiedEditText"
                        android:layout_height="match_parent"
                        android:hint="Alasan"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:maxLines="3"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Title for Bukti -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bukti"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/primaryTextColor">
                    <!-- Function description -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <!-- ImageView for Image -->
                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="900px"
                                android:layout_height="900px"
                                android:visibility="gone" />

                            <!-- PDFView for PDF -->
                            <com.github.barteksc.pdfviewer.PDFView
                                android:id="@+id/pdfView"
                                android:layout_width="900px"
                                android:layout_height="900px"
                                android:visibility="gone" />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/whiteTextColor"
                            android:text="Accepted file types: image,pdf" />

                        <!-- File upload content -->
                        <LinearLayout
                            android:id="@+id/layout"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <!-- Button to trigger file upload -->
                            <Button
                                android:id="@+id/changeFile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change" />
                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/whiteTextColor"
                                android:layout_height="wrap_content"
                                android:text="File: " />

                            <TextView
                                android:id="@+id/selectedFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/whiteTextColor"
                                android:layout_weight="1"
                                android:text="No file selected"
                                android:maxLines="1" />



                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <Button
                        android:id="@+id/acceptButton"
                        android:layout_width="0dp"
                        android:backgroundTint="@color/green"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackTextColor"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Accept"/>
                    <Button
                        android:id="@+id/rejectButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:backgroundTint="#ff0000"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackTextColor"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:text="Reject"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>